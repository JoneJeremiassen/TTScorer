<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>@ViewData["Title"] - TTScorer</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
        <link rel="stylesheet" href="~/TTScorer.styles.css" asp-append-version="true"/>
        <link rel="icon" type="image/png" sizes="255x255" href="~/experis_logo_225x225.png">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 dark-mode">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TTScorer</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
                <li class="nav-item ml-auto d-flex align-items-center">
                    <span id="darkModeText" class="nav-link text-dark">Dark Mode:</span>
                    <label class="switch">
                        <input type="checkbox" id="darkModeToggle">
                        <span class="slider round"></span>
                    </label>
                </li>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - TTScorer - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<!-- JavaScript for dark mode toggle -->
<script>
    var checkbox = document.querySelector('#darkModeToggle');
    var darkModeText = document.querySelector('#darkModeText');
    var mainNavbar = document.querySelector('.navbar');

    checkbox.addEventListener('change', function() {
        if(this.checked) {
            document.body.classList.add('dark-mode');
            darkModeText.classList.add('dark-mode-text');
            mainNavbar.classList.add('dark-mode');
            console.log("Dark mode enabled");
        } else {
            document.body.classList.remove('dark-mode');
            darkModeText.classList.remove('dark-mode-text');
            mainNavbar.classList.remove('dark-mode');
            console.log("Dark mode disabled");
        }
    });
</script>

</body>
</html>