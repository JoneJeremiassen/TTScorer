@model IEnumerable<TTScorer.Models.Match>


  @{ ViewData["Title"] = "Results"; }

  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>

  <h2>Recent Matches</h2>

  <table class="table">
    <thead>
      <tr>
        <th>Player 1</th>
        <th>Player 2</th>
        <th>Score 1</th>
        <th>Score 2</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var match in Model) {
      <tr>
        @if (match.Scores.First().Points > match.Scores.Last().Points) {
        <td>@match.Scores.First().Player.Name <i class="fa fa-trophy" /></td>
        <td>@match.Scores.Last().Player.Name</td>
        } else {
        <td>@match.Scores.First().Player.Name</td>
        <td>@match.Scores.Last().Player.Name <i class="fa fa-trophy" /></td>
        }
        <td>@match.Scores.First().Points</td>
        <td>@match.Scores.Last().Points</td>
      </tr>
      }
    </tbody>
  </table>