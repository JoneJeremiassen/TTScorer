@model IEnumerable<TTScorer.Models.TableTennisScorer>

@{
    ViewData["Title"] = "Results";
}

<h2>Recent Matches</h2>

<table class="table">
    <thead>
    <tr>
        <th>Player 1</th>
        <th>Player 2</th>
        <th>Score 1</th>
        <th>Score 2</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var match in Model)
    {
        <tr>
            <td>@match.Player1</td>
            <td>@match.Player2</td>
            <td>@match.Score1</td>
            <td>@match.Score2</td>
        </tr>
    }
    </tbody>
</table>